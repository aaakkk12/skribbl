ENVIRONMENT=production
DEBUG=False
DJANGO_SECRET_KEY=replace-with-strong-secret-at-least-50-characters
ALLOWED_HOSTS=onlinedrawinggame.online,www.onlinedrawinggame.online,127.0.0.1

CORS_ALLOWED_ORIGINS=https://onlinedrawinggame.online
CSRF_TRUSTED_ORIGINS=https://onlinedrawinggame.online
WS_ALLOWED_ORIGINS=https://onlinedrawinggame.online

DB_ENGINE=postgres
DB_NAME=onlinedrawinggame
DB_USER=onlinedrawinggame
DB_PASSWORD=replace-with-strong-db-password
DB_HOST=127.0.0.1
DB_PORT=5432
DB_CONN_MAX_AGE=120

ALLOW_SQLITE_IN_PRODUCTION=False

REDIS_URL=redis://127.0.0.1:6379/0
USE_INMEMORY_CHANNEL_LAYER=False
USE_REDIS_CACHE=True
CACHE_URL=redis://127.0.0.1:6379/1
