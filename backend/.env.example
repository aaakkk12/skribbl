ENVIRONMENT=development
DEBUG=True
DJANGO_SECRET_KEY=replace-with-strong-secret-at-least-50-chars
ALLOWED_HOSTS=localhost,127.0.0.1

# Frontend / CORS
FRONTEND_URL=http://localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000
WS_ALLOWED_ORIGINS=http://localhost:3000

# Database
# Use sqlite for local dev, postgres for production.
DB_ENGINE=sqlite
# DB_ENGINE=postgres
# DB_NAME=app
# DB_USER=app
# DB_PASSWORD=change-me
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_CONN_MAX_AGE=60
ALLOW_SQLITE_IN_PRODUCTION=False

# Redis (channels + cache)
REDIS_URL=redis://127.0.0.1:6379/0
USE_INMEMORY_CHANNEL_LAYER=False
USE_REDIS_CACHE=False
CACHE_URL=redis://127.0.0.1:6379/1
CACHE_TIMEOUT_SECONDS=300

# Retention / maintenance
INACTIVE_ACCOUNT_DAYS=7
INACTIVE_ROOM_RETENTION_DAYS=14
EMPTY_ROOM_DELETE_MINUTES=10
ROOM_HISTORY_TTL_SECONDS=604800
ROOM_STATE_TTL_SECONDS=86400
STORAGE_MAX_GB=20
STORAGE_TARGET_GB=15
LOG_RETENTION_DAYS=7

# JWT cookies
JWT_COOKIE_SECURE=False
JWT_COOKIE_SAMESITE=Lax
JWT_ACCESS_COOKIE=access_token
JWT_REFRESH_COOKIE=refresh_token
ACCESS_TOKEN_MINUTES=15
REFRESH_TOKEN_DAYS=7

# SMTP
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.your-provider.com
EMAIL_PORT=587
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_email_password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=your_email@example.com

# Admin API (disabled by default)
ENABLE_ADMIN_API=False
ADMIN_USERNAME=
ADMIN_PASSWORD=
ADMIN_COOKIE_NAME=admin_token
ADMIN_TOKEN_MAX_AGE=43200

# Rate limits
THROTTLE_ANON=60/min
THROTTLE_USER=300/min
THROTTLE_AUTH_LOGIN=10/min
THROTTLE_AUTH_REGISTER=5/min
THROTTLE_AUTH_PASSWORD_RESET=5/hour
THROTTLE_ROOM_JOIN=30/min
THROTTLE_ROOM_CREATE=10/min
THROTTLE_USER_SEARCH=90/min
THROTTLE_FRIEND_ACTION=60/min
THROTTLE_ROOM_INVITE=60/min

# HTTPS/security (set True in production)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
